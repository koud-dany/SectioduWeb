# Test Keys (for development)
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY_TEST = "pk_test_your_publishable_key_here"
STRIPE_SECRET_KEY_TEST = "sk_test_your_secret_key_here"

# Live Keys (for production - keep these secure!)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY_LIVE = "pk_live_your_live_publishable_key_here"
STRIPE_SECRET_KEY_LIVE = "sk_live_your_live_secret_key_here"

# Environment setting (change to 'live' for production)
STRIPE_ENVIRONMENT = "test"

# Helper function to get the correct keys based on environment
def get_stripe_keys():
    if STRIPE_ENVIRONMENT == "live":
        return {
            'publishable_key': STRIPE_PUBLISHABLE_KEY_LIVE,
            'secret_key': STRIPE_SECRET_KEY_LIVE
        }
    else:
        return {
            'publishable_key': STRIPE_PUBLISHABLE_KEY_TEST,
            'secret_key': STRIPE_SECRET_KEY_TEST
        }

